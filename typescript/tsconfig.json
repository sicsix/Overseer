{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "module": "ESNext",
    "target": "esnext",
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "lib": ["esnext", "dom"]
  },
  "include": [
    "**/*.ts"
  ]
}
